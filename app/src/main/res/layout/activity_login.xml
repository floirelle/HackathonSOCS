<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white"
    android:padding="20dp"
    >

    <ImageView
        android:id="@+id/back_arrow_btn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow_foreground"
        android:scaleX="-1"
        />
    <TextView
        android:textSize="20dp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_below="@id/back_arrow_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:textColor="@color/textPrimary"
        />

    <TextView
        android:id="@+id/login_info_text"
        android:textSize="12dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_below="@id/back_arrow_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan masuk dengan No HP yang telah terdaftar"
        android:textColor="@color/gray"
        />

    <LinearLayout
        android:id="@+id/phone_number_container"
        android:layout_marginTop="30dp"
        android:layout_below="@id/login_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >

        <TextView
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+62"

            />
        <EditText
            android:maxLines="1"
            android:padding="10dp"
            android:background="@color/transparent"
            android:hint="Nomor HP                                     "
            android:fontFamily="@font/montserrat_regular"
            android:maxLength="12"
            android:id="@+id/phone_number_field"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_marginTop="300dp"
        android:layout_marginHorizontal="100dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_primary"
        android:layout_below="@id/phone_number_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk"
        />



</RelativeLayout>